<Window x:Class="EdgeBackup.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="EdgeBackup v1" Height="250" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <RadioButton x:Name="RbBackup" HorizontalAlignment="Center" Margin="5" GroupName="RbAction" Content="Backup" IsChecked="True"/>
            <RadioButton x:Name="RbRestore" HorizontalAlignment="Center" Margin="5" GroupName="RbAction" Content="Restore" />
            <Button x:Name="BtnStart" Click="BtnStart_Click" Margin="5" MinWidth="150" Content="Start" />
        </StackPanel>
    </Grid>
</Window>
